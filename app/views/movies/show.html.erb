<h1>Movie Details</h1>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @movie.poster_url, class: "img-fluid" %>
    </div>
    <div class="col-md-8">
      <h2><%= @movie.title %></h2>
      <p><%= @movie.overview %></p>
      <p><small class="text-muted">Rating: <%= @movie.rating %></small></p>
      <%= link_to "Edit", edit_movie_path(@movie), class: "btn btn-primary" %>
      <%= link_to "Delete", movie_path(@movie), data: { turbo_method: :delete, turbo_confirm: "are you sure?" }, class: "btn btn-danger btn-sm" %>
      <%= link_to "Back", movies_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
