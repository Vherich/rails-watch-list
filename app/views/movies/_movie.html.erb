<div class="col-md-4">
  <div class="card mb-3">
    <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %>">
    <div class="card-body">
      <h5 class="card-title"><%= movie.title %></h5>
      <p class="card-text"><%= movie.overview %></p>
      <p class="card-text">Rating: <%= movie.rating %></p>
      <%= link_to 'Show', movie_path(movie), class: 'btn btn-secondary' %>
      <%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-secondary' %>
      <%= link_to 'Destroy', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
