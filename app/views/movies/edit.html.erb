<h1>Edit Movie</h1>

<%= form_with model: @movie do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :overview %>
    <%= f.text_area :overview, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :poster_url %>
    <%= f.text_field :poster_url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.number_field :rating, step: 0.1, min: 0, max: 10, class: "form-control" %>
  </div>
  <%= f.submit "Update Movie", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", movies_path, class: "btn btn-secondary" %>
